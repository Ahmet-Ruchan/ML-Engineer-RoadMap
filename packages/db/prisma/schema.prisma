// Prisma Schema for ML Engineer Roadmap
// Using SQLite for local development
// Switch to PostgreSQL (Supabase) for production
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// USER MANAGEMENT
// ============================================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String?   // For credentials auth
  name          String?
  image         String?
  emailVerified DateTime?
  role          String    @default("user") // user, admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  profile       Profile?
  progressItems ProgressItem[]
  bookmarks     Bookmark[]
  quizAttempts  QuizAttempt[]
  userBadges    UserBadge[]
  notes         Note[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Profile {
  id              String   @id @default(uuid())
  userId          String   @unique
  bio             String?
  level           Int      @default(1)
  experiencePoints Int     @default(0)
  preferredLanguage String @default("en")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===================================
// USER MANAGEMENT
// ===================================

model users {
  id         String   @id @default(uuid())
  email      String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  profile        profiles?
  progress_items progress_item[]
  bookmarks      bookmark[]
  quiz_attempts  quiz_attempt[]

  @@map("users")
}

model profiles {
  id         String   @id @default(uuid())
  user_id    String   @unique
  full_name  String?
  avatar_url String?
  role       String   @default("student") // student, admin
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("profiles")
}

// ============================================
// ROADMAP STRUCTURE
// ============================================

model Track {
  id          String   @id @default(uuid())
  slug        String   @unique // ml, ai, cs, se, ds
  titleEn     String
  titleTr     String
  descriptionEn String?
  descriptionTr String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  phases Phase[]

  @@map("tracks")
}

model Phase {
  id          String   @id @default(uuid())
  trackId     String
  slug        String   // phase-1, phase-2
  titleEn     String
  titleTr     String
  descriptionEn String?
  descriptionTr String?
  durationMonths Int   @default(3)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  track  Track   @relation(fields: [trackId], references: [id], onDelete: Cascade)
  topics Topic[]

  @@unique([trackId, slug])
  @@map("phases")
}

model Topic {
  id          String   @id @default(uuid())
  phaseId     String
  slug        String
  titleEn     String
  titleTr     String
  descriptionEn String?
  descriptionTr String?
  contentEn   String?  // MDX content
  contentTr   String?  // MDX content
  order       Int      @default(0)
  estimatedHours Int?
  difficulty  String?  // beginner, intermediate, advanced
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  phase         Phase          @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  resources     Resource[]
  progressItems ProgressItem[]
  quizzes       Quiz[]

  @@unique([phaseId, slug])
  @@map("topics")
}

model Resource {
  id          String   @id @default(uuid())
  topicId     String
  type        String   // book, course, video, article, pdf, link
  titleEn     String
  titleTr     String?
  descriptionEn String?
  descriptionTr String?
  url         String?
  fileUrl     String?  // Supabase Storage URL for PDFs
  author      String?
  isPremium   Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  topic     Topic      @relation(fields: [topicId], references: [id], onDelete: Cascade)
  bookmarks Bookmark[]
// ===================================
// CONTENT HIERARCHY
// ===================================

model phase {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  description String?  @db.Text
  order       Int
  difficulty  String   // beginner, intermediate, advanced
  duration    Int?     // estimated days
  mdx_path    String?  // path to MDX file (optional)
  published   Boolean  @default(false)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  topics topic[]

  @@map("phases")
}

model topic {
  id             String   @id @default(uuid())
  phase_id       String
  title          String
  slug           String
  description    String?  @db.Text // Short description (shown in lists)
  mdx_path       String?  // Path to MDX file: "ml/python-basics"
  order          Int
  estimated_time Int?     // minutes
  published      Boolean  @default(false)
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  phase          phase           @relation(fields: [phase_id], references: [id], onDelete: Cascade)
  resources      resource[]
  quizzes        quiz[]
  progress_items progress_item[]
  bookmarks      bookmark[]

  @@unique([phase_id, slug])
  @@map("topics")
}

model resource {
  id          String   @id @default(uuid())
  topic_id    String
  title       String
  description String?  @db.Text
  type        String   // pdf, link, video, book
  url         String?  // External link
  file_path   String?  // Supabase Storage path
  file_size   Int?     // bytes
  license     String?  // Copyright info
  order       Int      @default(0)
  published   Boolean  @default(false)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  topic topic @relation(fields: [topic_id], references: [id], onDelete: Cascade)

  @@map("resources")
}

// ============================================
// PROGRESS TRACKING
// ============================================

model ProgressItem {
  id          String   @id @default(uuid())
  userId      String
  topicId     String
  status      String   @default("planned") // planned, in_progress, completed
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  topic Topic @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@unique([userId, topicId])
  @@map("progress_items")
}

model Bookmark {
  id         String   @id @default(uuid())
  userId     String
  resourceId String
  note       String?
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  resource Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)

  @@unique([userId, resourceId])
  @@map("bookmarks")
}

model Note {
  id        String   @id @default(uuid())
  userId    String
  title     String
  content   String   // Rich text / Markdown
  tags      String?  // JSON string of tags array (for SQLite compatibility)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notes")
}

// ============================================
// QUIZ SYSTEM
// ============================================

model Quiz {
  id          String   @id @default(uuid())
  topicId     String
  titleEn     String
  titleTr     String?
  descriptionEn String?
  descriptionTr String?
  passingScore Int     @default(70)
  timeLimit   Int?     // in minutes
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  topic     Topic         @relation(fields: [topicId], references: [id], onDelete: Cascade)
  questions Question[]
  attempts  QuizAttempt[]
// ===================================
// QUIZ SYSTEM
// ===================================

model quiz {
  id          String   @id @default(uuid())
  topic_id    String
  title       String
  description String?  @db.Text
  pass_score  Int      @default(70) // percentage
  time_limit  Int?     // minutes (null = no limit)
  published   Boolean  @default(false)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  topic     topic          @relation(fields: [topic_id], references: [id], onDelete: Cascade)
  questions question[]
  attempts  quiz_attempt[]

  @@map("quizzes")
}

model Question {
  id          String   @id @default(uuid())
  quizId      String
  questionEn  String
  questionTr  String?
  type        String   @default("multiple_choice") // multiple_choice, true_false
  order       Int      @default(0)
  points      Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  quiz    Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  choices Choice[]
  answers QuizAnswer[]
model question {
  id             String   @id @default(uuid())
  quiz_id        String
  question_text  String   @db.Text
  explanation    String?  @db.Text // Shown after answer
  order          Int
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  quiz    quiz          @relation(fields: [quiz_id], references: [id], onDelete: Cascade)
  choices choice[]
  answers quiz_answer[]

  @@map("questions")
}

model Choice {
  id         String   @id @default(uuid())
  questionId String
  choiceEn   String
  choiceTr   String?
  isCorrect  Boolean  @default(false)
  order      Int      @default(0)
  createdAt  DateTime @default(now())

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
model choice {
  id          String   @id @default(uuid())
  question_id String
  choice_text String   @db.Text
  is_correct  Boolean  @default(false)
  order       Int
  created_at  DateTime @default(now())

  question question      @relation(fields: [question_id], references: [id], onDelete: Cascade)
  answers  quiz_answer[]

  @@map("choices")
}

model QuizAttempt {
  id          String   @id @default(uuid())
  userId      String
  quizId      String
  score       Int      @default(0)
  totalPoints Int      @default(0)
  passed      Boolean  @default(false)
  startedAt   DateTime @default(now())
  completedAt DateTime?

  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz    Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers QuizAnswer[]
model quiz_attempt {
  id           String    @id @default(uuid())
  user_id      String
  quiz_id      String
  score        Int?      // percentage (0-100)
  passed       Boolean   @default(false)
  started_at   DateTime  @default(now())
  completed_at DateTime?

  user    users         @relation(fields: [user_id], references: [id], onDelete: Cascade)
  quiz    quiz          @relation(fields: [quiz_id], references: [id], onDelete: Cascade)
  answers quiz_answer[]

  @@map("quiz_attempts")
}

model QuizAnswer {
  id          String   @id @default(uuid())
  attemptId   String
  questionId  String
  choiceId    String?  // null for text answers
  answerText  String?
  isCorrect   Boolean  @default(false)
  pointsEarned Int     @default(0)
  createdAt   DateTime @default(now())

  attempt  QuizAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question Question    @relation(fields: [questionId], references: [id], onDelete: Cascade)
model quiz_answer {
  id          String   @id @default(uuid())
  attempt_id  String
  question_id String
  choice_id   String
  is_correct  Boolean
  answered_at DateTime @default(now())

  attempt  quiz_attempt @relation(fields: [attempt_id], references: [id], onDelete: Cascade)
  question question     @relation(fields: [question_id], references: [id], onDelete: Cascade)
  choice   choice       @relation(fields: [choice_id], references: [id], onDelete: Cascade)

  @@map("quiz_answers")
}

// ============================================
// GAMIFICATION
// ============================================

model Badge {
  id          String   @id @default(uuid())
  slug        String   @unique
  nameEn      String
  nameTr      String?
  descriptionEn String?
  descriptionTr String?
  iconUrl     String?
  criteria    String   // JSON string with criteria
  points      Int      @default(10)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userBadges UserBadge[]

  @@map("badges")
}

model UserBadge {
  id        String   @id @default(uuid())
  userId    String
  badgeId   String
  earnedAt  DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@map("user_badges")
}

// ============================================
// ADMIN & CONTENT MANAGEMENT
// ============================================

model ActivityLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String   // login, quiz_completed, topic_completed, etc.
  entityType String? // quiz, topic, resource
  entityId  String?
  metadata  String?  // JSON string
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@map("activity_logs")
}
// ===================================
// USER PROGRESS & ENGAGEMENT
// ===================================

model progress_item {
  id           String    @id @default(uuid())
  user_id      String
  topic_id     String
  status       String    // planned, in_progress, completed
  started_at   DateTime?
  completed_at DateTime?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  user  users @relation(fields: [user_id], references: [id], onDelete: Cascade)
  topic topic @relation(fields: [topic_id], references: [id], onDelete: Cascade)

  @@unique([user_id, topic_id])
  @@index([user_id, status])
  @@map("progress_items")
}

model bookmark {
  id         String   @id @default(uuid())
  user_id    String
  topic_id   String
  created_at DateTime @default(now())

  user  users @relation(fields: [user_id], references: [id], onDelete: Cascade)
  topic topic @relation(fields: [topic_id], references: [id], onDelete: Cascade)

  @@unique([user_id, topic_id])
  @@map("bookmarks")
}

